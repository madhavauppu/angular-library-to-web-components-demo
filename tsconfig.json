{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "angular-components-library": [
        "dist/angular-components-library"
      ],
      "angular-components-library/*": [
        "dist/angular-components-library/*"
      ],
      "another-angular-components-library": [
        "dist/another-angular-components-library"
      ],
      "another-angular-components-library/*": [
        "dist/another-angular-components-library/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false,
  },
  "include": [
    "projects/**/*.ts"
  ]
}